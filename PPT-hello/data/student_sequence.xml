<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tạo một sequence cho mã học viên -->
        <record id="seq_student_id" model="ir.sequence">
            <field name="name">Mã học viên</field> <!-- Tên sequence -->
            <field name="code">student.odoo</field> <!-- Mã code của sequence -->
            <field name="prefix">HV</field> <!-- Tiền tố, ví dụ: HV -->
            <field name="padding">4</field> <!-- Padding (số chữ số sau tiền tố) -->
            <field name="number_increment">1</field> <!-- Mỗi lần tạo bản ghi mới, tăng thêm 1 -->
            <field name="next_number">1</field> <!-- Số tiếp theo (chắc chắn là số bắt đầu) -->
        </record>
    </data>
</odoo>
